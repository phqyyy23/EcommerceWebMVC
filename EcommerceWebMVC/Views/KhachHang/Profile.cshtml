@model EcommerceWebMVC.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Profile";
}
<div class="container-fluid py-5">
    <div class="container py-5">
        <div style="padding-top:40px" class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="card shadow-sm">
                    <div class="row g-0">
                        <!-- Cột bên trái -->
                        <div class="col-md-4 text-center p-3 border-end">
                            <img src="https://afamilycdn.com/150157425591193600/2023/2/17/skuukzky3308526772257608298314613575951919560419196n-1676619323007855503925-1676621668044-16766216690331632264548.jpg"
                                 alt="Profile Picture" class="img-fluid rounded-circle border" style="width:200px; height: 200px;">

                            <h5 class="mt-2">@Model.HoTen</h5>
                            <button class="btn btn-dark btn-sm mt-2">Đổi mật khẩu</button>
                        </div>

                        <!-- Cột bên phải -->
                        <div class="col-md-8 p-3">
                            <h4 class="text-primary">THÔNG TIN CÁ NHÂN</h4>

                            <form action="/Profile/Save" method="post">
                                <div class="mb-2">
                                    <label asp-for="@Model.TenDn" class="form-label"></label>
                                    <input asp-for="@Model.TenDn" class="form-control">
                                    <span asp-validation-for="@Model.TenDn" class="text-danger"></span>
                                </div>

                                <div class="mb-2">
                                    <label asp-for="@Model.MatKhau" class="form-label"></label>
                                    <input asp-for="@Model.MatKhau" type="password" value="@Model.MatKhau" class="form-control">
                                </div>

                                <div class="mb-2">
                                    <label asp-for="@Model.HoTen" class="form-label"></label>
                                    <input asp-for="@Model.HoTen" class="form-control">
                                </div>

                                <div class="mb-2">
                                    
                                    <label asp-for="@Model.GioiTinh" class="form-label"></label>
                                    <div class="d-flex gap-3">
                                        <div class="form-check">
                                            <input asp-for="GioiTinh" class="form-check-input" type="radio" value="true">
                                            <label class="form-check-label">Nam</label>
                                        </div>
                                        <div class="form-check">
                                            <input asp-for="GioiTinh" class="form-check-input" type="radio" value="false">
                                            <label class="form-check-label">Nữ</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-2">
                                    <label asp-for="@Model.NgaySinh" class="form-label my-3"></label>
                                    <input asp-for="@Model.NgaySinh" class="form-control">
                                    <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
                                </div>

                                <div class="mb-2">
                                    <label asp-for="@Model.NgaySinh" class="form-label my-3"></label>
                                    <input asp-for="@Model.NgaySinh" class="form-control">
                                    <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
                                </div>

                                <div class="mb-2">
                                    <label asp-for="@Model.NgaySinh" class="form-label my-3"></label>
                                    <input asp-for="@Model.NgaySinh" class="form-control">
                                    <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
                                </div>

                                <!-- Nút Lưu và Đăng xuất -->
                                <div class="d-flex justify-content-between mt-3">
                                    <button type="submit" class="btn btn-success">Lưu</button>
                                    <button type="button" class="btn btn-danger" onclick="document.getElementById('logout-form').submit();">Đăng xuất</button>
                                </div>
                            </form>

                            <a id="logout-form" asp-action="DangXuat" > Dang xuat</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
