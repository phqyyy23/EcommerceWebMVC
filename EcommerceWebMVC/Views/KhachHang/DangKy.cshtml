@model EcommerceWebMVC.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Đăng ký";
}
<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Đăng ký Thành viên</h1>
        <form asp-action="DangKy" enctype="multipart/form-data">
            <div class="row g-5">
                <div class="col-md-12 col-lg-6 col-xl-7">
                    <div class="row">
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label asp-for="@Model.TenDn" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.TenDn" class="form-control">
                                <span asp-validation-for="@Model.TenDn" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label asp-for="@Model.MatKhau" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.MatKhau" class="form-control">
                                <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-item">
                        <label asp-for="@Model.HoTen" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.HoTen" class="form-control">
                        <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                    </div>

                    <div class="form-item"> 
                        <label asp-for="@Model.GioiTinh" class="form-label my-3"></label><sup>*</sup>
                        <div class="d-flex gap-3">
                            <div class="form-check">
                                <input asp-for="@Model.GioiTinh" class="form-check-input" type="radio" value="true" id="gender-male">
                                <label class="form-check-label" for="gender-male">Nam</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="@Model.GioiTinh" class="form-check-input" type="radio" value="false" id="gender-female">
                                <label class="form-check-label" for="gender-female">Nữ</label>
                            </div>
                        </div>
                        <span asp-validation-for="@Model.GioiTinh" class="text-danger"></span>
                    </div>

                    <div class="form-item">
                        <label asp-for="@Model.NgaySinh" class="form-label my-3"></label>
                        <input asp-for="@Model.NgaySinh" class="form-control">
                        <span asp-validation-for="@Model.NgaySinh" class="text-danger"></span>
                    </div>

                    <div class="form-item">
                        <label asp-for="@Model.DiaChi" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.DiaChi" class="form-control">
                        <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                    </div>

                    <div class="form-item">
                        <label asp-for="@Model.DienThoai" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.DienThoai" class="form-control">
                        <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                    </div>
                    <div class="form-check my-3">
                        <input type="checkbox" class="form-check-input" id="Account-1">
                        <label class="form-check-label" for="Account-1">Tạo tài khoản?</label>
                    </div>

                    <hr>
                    <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                        <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng ký</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>