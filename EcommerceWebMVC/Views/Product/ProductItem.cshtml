@model IEnumerable<EcommerceWebMVC.ViewModels.ProductVM>




@foreach (var item in Model)
{
    <div class="col-md-6 col-lg-6 col-xl-4">
        <div class="rounded position-relative fruite-item">
            <div style="height:300px" class="fruite-img">
                <a asp-action="Detail" asp-controller="Product" asp-route-id="@item.IdProd">
                    <img src="~/Hinh/@item.Hinh" class="img-fluid w-100 rounded-top" alt="@item.TenProd">
                </a>
            </div>
            <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">@item.TenLoai</div>
            <div style="height:180px" class="p-4 border border-secondary border-top-0 rounded-bottom">
                <a asp-action="Detail" asp-controller="Product" asp-route-id="@item.IdProd">
                    <h4 class="product-title">@item.TenProd</h4>
                </a>
                <div class="d-flex justify-content-between flex-lg-wrap">
                    <p class="text-dark fs-5 fw-bold mb-0">$@item.DonGia</p>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="AddToCart" asp-controller="Cart" asp-route-id="@item.IdProd" class="btn border border-secondary rounded-pill px-3 text-primary">
                            <i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart
                        </a>
                    }
                    else
                    {
                        <a asp-action="DangNhap" asp-controller="KhachHang" class="btn border border-secondary rounded-pill px-3 text-warning">
                            <i class="fa fa-sign-in-alt me-2 text-warning"></i> Add to cart
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
}